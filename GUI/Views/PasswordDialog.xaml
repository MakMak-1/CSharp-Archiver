<Window x:Class="GUI.Views.Dialogs.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Security" Height="180" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow">

    <Grid Margin="15">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Enter Password:" FontWeight="Bold" Margin="0,0,0,10"/>

            <PasswordBox x:Name="InputBox" Margin="0,0,0,20" Padding="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" IsCancel="True" Width="80" Margin="0,0,10,0"/>
                <Button Content="OK" IsDefault="True" Click="BtnOk_Click" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>