<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GUI.ViewModels"
        xmlns:views="clr-namespace:GUI.Views"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="MyArchiver" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White"
        
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ArchiveExplorerViewModel}">
            <views:EditorView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ArchiveCreationViewModel}">
            <views:ArchiveCreationView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding CurrentView}">

            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentView}" Value="{x:Null}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Grid>
                                            <Ellipse Width="600" Height="600" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="-200,-200,-200,-200" Opacity="0.03">
                                                <Ellipse.Fill>
                                                    <RadialGradientBrush>
                                                        <GradientStop Color="#0078D7" Offset="0"/>
                                                        <GradientStop Color="Transparent" Offset="1"/>
                                                    </RadialGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>

                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                                                <icon:PackIconMaterial Kind="ZipBox" Width="72" Height="72" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                                                <TextBlock Text="MyArchiver" 
                                                           FontSize="32" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="#222" 
                                                           HorizontalAlignment="Center"
                                                           RenderOptions.ClearTypeHint="Enabled"/>

                                                <TextBlock Text="Manage your compressed files easily" 
                                                           FontSize="16" 
                                                           Foreground="#666" 
                                                           HorizontalAlignment="Center" 
                                                           Margin="0,5,0,40"/>

                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                                                    <Button Command="{Binding DataContext.OpenArchiveCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            Style="{StaticResource ModernButton}"
                                                            Width="160" Height="45" Margin="0,0,20,0"
                                                            Background="#F5F5F5">
                                                        <StackPanel Orientation="Horizontal">
                                                            <icon:PackIconMaterial Kind="FolderOpen" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#444"/>
                                                            <TextBlock Text="Open Archive" FontSize="14" Foreground="#333"/>
                                                        </StackPanel>
                                                    </Button>

                                                    <Button Command="{Binding DataContext.CreateArchiveCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            Style="{StaticResource PrimaryButton}"
                                                            Width="160" Height="45">
                                                        <StackPanel Orientation="Horizontal">
                                                            <icon:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                            <TextBlock Text="Create New" FontSize="14"/>
                                                        </StackPanel>
                                                    </Button>

                                                </StackPanel>
                                            </StackPanel>

                                            <TextBlock Text="v1.0.0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20" Foreground="#DDD"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</Window>