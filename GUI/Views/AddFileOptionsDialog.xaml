<Window x:Class="GUI.Views.Dialogs.AddFileOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add File Options" Height="160" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow">

    <Grid Margin="15">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Compression Level:" FontWeight="Bold" Margin="0,0,0,5"/>

            <ComboBox x:Name="LevelBox" Margin="0,0,0,20" Padding="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" IsCancel="True" Width="80" Margin="0,0,10,0"/>
                <Button Content="Add" IsDefault="True" Click="BtnAdd_Click" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>