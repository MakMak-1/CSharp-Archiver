<UserControl x:Class="GUI.Views.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:GUI.ViewModels"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             xmlns:converters="clr-namespace:GUI.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ArchiveExplorerViewModel}"
             Background="{StaticResource BackgroundColor}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:BoolToIconConverter x:Key="BoolToIconConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding GoBackCommand}" Style="{StaticResource ModernButton}" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <icon:PackIconMaterial Kind="ArrowLeft" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Main Menu"/>
                    </StackPanel>
                </Button>

                <StackPanel Orientation="Horizontal">

                    <Button Command="{Binding ExtractAllCommand}" Style="{StaticResource ModernButton}" ToolTip="Extract All">
                        <StackPanel Orientation="Horizontal">
                            <icon:PackIconMaterial Kind="Export" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{StaticResource PrimaryColor}"/>
                            <TextBlock Text="Extract"/>
                        </StackPanel>
                    </Button>

                    <Rectangle Width="1" Height="24" Fill="#DDD" Margin="10,0"/>

                    <Button Command="{Binding AddFileToArchiveCommand}" Style="{StaticResource ModernButton}" Margin="0,0,5,0" ToolTip="Add File">
                        <StackPanel Orientation="Horizontal">
                            <icon:PackIconMaterial Kind="FilePlus" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Add File"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding AddFolderToArchiveCommand}" Style="{StaticResource ModernButton}" ToolTip="Add Folder">
                        <StackPanel Orientation="Horizontal">
                            <icon:PackIconMaterial Kind="FolderPlus" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Add Folder"/>
                        </StackPanel>
                    </Button>

                    <Rectangle Width="1" Height="24" Fill="#DDD" Margin="10,0"/>

                    <Button Command="{Binding DeleteItemCommand}" Style="{StaticResource ModernButton}" Foreground="{StaticResource DestructiveColor}">
                        <StackPanel Orientation="Horizontal">
                            <icon:PackIconMaterial Kind="Delete" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Delete"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="15,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Command="{Binding NavigateUpCommand}" Style="{StaticResource ModernButton}" Margin="0,0,5,0" Padding="8">
                <icon:PackIconMaterial Kind="ArrowUp" />
            </Button>

            <Border Grid.Column="1" Background="White" CornerRadius="4" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                <TextBox Text="{Binding CurrentPath, Mode=OneWay}" 
                         IsReadOnly="True" 
                         VerticalContentAlignment="Center" 
                         Padding="10,5"
                         BorderThickness="0" Background="Transparent"
                         FontFamily="Consolas"/>
            </Border>
        </Grid>

        <Border Grid.Row="2" Margin="15,0,15,15" Background="White" CornerRadius="4" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <DataGrid x:Name="FileGrid"
                      ItemsSource="{Binding CurrentEntries}"
                      SelectedItem="{Binding SelectedEntry, Mode=TwoWay}"
                      SelectionUnit="FullRow"
                      SelectionChanged="DataGrid_SelectionChanged"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      HeadersVisibility="Column">

                <DataGrid.ContextMenu>
                    <ContextMenu DataContext="{Binding Path=PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="Delete Selection" Command="{Binding DeleteItemCommand}">
                            <MenuItem.Icon>
                                <icon:PackIconMaterial Kind="Delete" Foreground="Red"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </DataGrid.ContextMenu>

                <DataGrid.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick"
                                  Command="{Binding NavigateCommand}"
                                  CommandParameter="{Binding SelectedItem, ElementName=FileGrid}"/>
                </DataGrid.InputBindings>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="40" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <icon:PackIconMaterial Kind="{Binding IsDirectory, Converter={StaticResource BoolToIconConverter}}" 
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                                       Foreground="#555" Width="18" Height="18"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="3*"/>
                    <DataGridTextColumn Header="Size" Binding="{Binding Size, StringFormat='{}{0:N0} bytes'}" Width="150" Foreground="#777"/>
                    <DataGridTextColumn Header="Date Modified" Binding="{Binding LastWriteTime, StringFormat='g'}" Width="180" Foreground="#777"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border Grid.Row="2" Background="#CCFFFFFF" 
        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}">

            <Border Background="White" Width="400" Padding="20" CornerRadius="8">

                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2"/>
                </Border.Effect>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                    <TextBlock Text="{Binding ProgressMessage}" 
                        Width="360"
                        FontWeight="SemiBold" 
                        FontSize="14" 
                        Foreground="#333"
                        Margin="0,0,0,15" 
                        HorizontalAlignment="Center"
                        TextAlignment="Center"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap"/>

                    <ProgressBar Value="{Binding ProgressValue}" 
                        Height="10" 
                        Minimum="0" Maximum="100" 
                        Foreground="{StaticResource PrimaryColor}"
                        HorizontalAlignment="Stretch"/>    

                    <Button Content="Cancel" 
                    Style="{StaticResource ModernButton}"
                    Command="{Binding CancelCommand}" 
                    Visibility="{Binding IsCancellable, Converter={StaticResource BoolToVis}}"
                    Margin="0,15,0,0" 
                    Foreground="Red"
                    HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>

        <StatusBar Grid.Row="3" Background="#FAFAFA" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="10,5">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding CurrentEntries.Count}" FontWeight="Bold"/>
                    <TextBlock Text=" items" Foreground="Gray"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>